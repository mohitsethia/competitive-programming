#include<iostream>
#include<cmath>
#include<algorithm>
using namespace std;
#define ll long long int
bool isPrime(ll x){
    for(int i = 2; i <= sqrt(x); i++){
        if(x % i == 0){
            return false;
        }
    }
    return true;
}
int main(){
    ll t;
    cin >>t;
    while(t--){
        ll n, k;
        cin >> n >> k;
        ll sum = n;
        if(n <= 1){
            sum += n;
            k--;
        }
        int flag = 0;
        for(int i = 2; i <= sqrt(n); i++){
            if(n % i == 0){
                n += i;
                flag = 1;
                break;
            }
        }
        if(flag == 0){
            n += n;
        }
        cout << n + 2*(k-1) << endl;
    }
    return 0;
}
